{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2021",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "Bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@main/*": [
                "electron/main/*"
            ],
            "@preload/*": [
                "electron/preload/*"
            ],
            "@renderer/*": [
                "src/*"
            ],
            "@shared/*": [
                "shared/*"
            ]
        }
    },
    "include": [
        "src",
        "shared",
        "electron/preload"
    ]
}